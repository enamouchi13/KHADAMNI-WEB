{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1>Utilisateur par Role</h1>
    <canvas id="matchs" width="1000" height="500"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha256-t9UJPrESBeG2ojKTIcFLPGF7nHi2vEc7f5A2KpH/UBU=" crossorigin="anonymous"></script>

<script>
    let liv = document.querySelector("#matchs")
    let matchGraph = new Chart(liv, {
        type: "pie",
        data: {
            labels:  ['cin', 'tel'],
            datasets: [{
                label: "Répartition des catégories",
                data: [{{ cinData|raw }}, {{ telephoneData|raw }}],
                backgroundColor: ['#FF5733','#FFBD33']
            }]
        }
    })
</script>


{% endblock %}
