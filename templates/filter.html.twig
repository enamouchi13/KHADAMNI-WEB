label[for="constructeur"]::before {
  content: "\f10c";
  font-family: "Font Awesome 5 Free";
  font-weight: 900;
  font-size: 20px;
  margin-right: 10px;
  color: #ffd700;
}

input[type="radio"]:checked + label::before {
  color: #fff;
  background-color: #ffd700;
  border-radius: 50%;
  padding: 5px;
}

button[type="submit"] {
  background-color: #ffd700;
  color: #333;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

button[type="submit"]:hover {
  background-color: #fff;
  color: #ffd700;
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
}

</style>


