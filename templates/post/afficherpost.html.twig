{% extends 'base1.html.twig' %}
{% block body %}
    <div class="card-body pb-0">
        <h5 class="card-title">Top Selling <span>| Today</span></h5>

        <table class="table table-borderless">
            <thead>
            <tr>
                <th scope="col">ID</th>

                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Image</th>


            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
            <tr>
                <td> {{ post.id}}</td>
                <td> {{ post.title}}</td>
                <td> {{post.content}}</td>


                <td><img  src="{{ asset('uploads/' ~ post.image) }}" width="50" height="50" alt="{{post.image}}"></td>

                <td><a href="{{path('app_deletepost',{id:post.id})}} " class="card-link">Delete</a> </td>
                <td><a href="{{path('app_addpost',{id:post.id})}} " class="card-link">Edit</a></td>

                {% endfor %}

            </tr>

            </tbody>
        </table>
        <td><a href="{{path('app_addpost')}} " class="card-link">Add</a></td>
    </div>
{% endblock %}